/var/log/apache2/*.log {
	weekly
	missingok
	rotate 52
	compress
	delaycompress
	notifempty
	create 640 root www-data
	sharedscripts
	prerotate
		sudo -u www-data /etc/bin/cron/awstats-update
	endscript
	postrotate
		if [ -f "`. /etc/apache2/envvars ; echo ${APACHE_PID_FILE:-/var/run/apache2.pid}`" ]; then
			/etc/init.d/apache2 reload > /dev/null
		fi
	endscript
}

/var/log/php/error.log {
	weekly
	missingok
	rotate 52
	compress
	delaycompress
	notifempty
	create 640 root www-data
}
