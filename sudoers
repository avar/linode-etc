Defaults	env_reset
Defaults        insults
Defaults        lecture=never
root	ALL=(ALL:ALL) ALL

# members of group sudo can do as they please
%sudo   ALL=(ALL:ALL) NOPASSWD: ALL

# for users who like to provide a password
%fail   ALL=(ALL:ALL) ALL

# The leech user can chown files to indicate who downloaded them
leech   ALL=(ALL:ALL) NOPASSWD: /bin/chown
