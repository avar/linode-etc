#!/bin/bash

export brain=/var/tmp/ramdisk/twatterhose/twatterhose.brn
password=$(cat ~/.twatterhose.password)

mkdir -p "$(dirname $brain)"

# Run Twatterhose
cronjob --errors-only --ignore-errors lock --jobname twatterhose --rcpt twatterhose --command "
    twatterhose \
        --username twatterhose \
        --password $password \
        --brain $brain \
    | grep '^Got twat' >> ~/g/bot-twatterhose/twatterhose.txt
"
