#!/bin/sh

export brain=/home/failo/failo/brain.sqlite

# We've just rebooted and the brain doesn't exist yet
test -f $brain || exit 0

# The brain is locked
if ! sqlite3 $brain '.schema' >/dev/null 2>&1
then
    exit 0
fi

export name=Failo
export mode=dump

state_dir=/var/lib/munin/plugin-state/hailo_

test=stats file=$state_dir/hailo-stats.json perl /etc/munin/our-plugins/munin-plugin-hailo_/hailo_
test=time  file=$state_dir/hailo-time.json  perl /etc/munin/our-plugins/munin-plugin-hailo_/hailo_
