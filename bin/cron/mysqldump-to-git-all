#!/bin/sh

if test -z "$user" || test -z "$password"; then
    echo "You must supply user= and password="
    exit 1
fi

for database in $(echo 'show databases;' | mysql -s -u"$user" -p"$password" | grep -v '^information_schema$'); do
    type=mysql database="$database" /etc/bin/cron/sqldump-to-git
done
